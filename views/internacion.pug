extends layout

block content
  .container.mt-5
    h1.text-center.mb-4 Administración de Internaciones

    .row
      each cama in camas
        .col-md-4.mb-3
          .card.shadow-sm.text-center
            .card-body
              h5 Cama #{cama.numero}
              p.mb-1
                strong Estado:
                if cama.estado === 'LIBRE'
                  span.text-success
                    i.bi.bi-check-circle-fill.ms-1 Libre
                else if cama.estado === 'OCUPADA'
                  span.text-danger
                    i.bi.bi-person-fill-lock.ms-1 Ocupada
                else if cama.estado === 'HIGIENIZANDO'
                  span.text-warning
                    i.bi.bi-bucket-fill.ms-1 Higienizando

              if cama.estado === 'OCUPADA' && cama.paciente
                hr
                h6 Paciente
                p.mb-0 #{cama.paciente.nombre} #{cama.paciente.apellido}
                p.mb-0
                  i(class=cama.paciente.sexo === 'F' ? 'bi bi-gender-female text-danger' : 'bi bi-gender-male text-primary')
                  |  #{cama.paciente.sexo === 'F' ? ' Femenino' : ' Masculino'}

              hr
              p.mb-0
                i.bi.bi-door-open-fill
                |  Habitación: #{cama.habitacion}
              p.mb-0
                i.bi.bi-hospital-fill
                |  Sector: #{cama.sector}

  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
