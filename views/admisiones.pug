doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    .container.mt-5
      h1.text-center.mb-4 Admisión de Paciente
      form(action='/admisiones/registro', method='POST')
        .mb-3
          label(for='nombre' class='form-label') Nombre Completo
          input(type='text' class='form-control' id='nombre' name='nombre' required)
        .mb-3
          label(for='edad' class='form-label') Edad
          input(type='number' class='form-control' id='edad' name='edad' required)
        .mb-3
          label(for='motivo' class='form-label') Motivo de Ingreso
          textarea(class='form-control' id='motivo' name='motivo' rows='3' required)
        .mb-3
          label(for='documento' class='form-label') Número de Documento
          input(type='text' class='form-control' id='documento' name='documento' required)
        .mb-3
          label(for='sexo' class='form-label') Sexo
          select(class='form-select' id='sexo' name='sexo' required)
            option(value='M') Masculino
            option(value='F') Femenino
            option(value='O') Otro
        .mb-3
          label(for='habitacion' class='form-label') Asignar Habitación
          select(class='form-select' id='habitacion' name='habitacion' required)
            option(value='') Seleccione una habitación
            option(value='101') Habitación 101
            option(value='102') Habitación 102
            option(value='103') Habitación 103
            option(value='104') Habitación 104  // TODO CAMBIAR FORMA DINAMICA CAMAS DISPO
        .mb-3
          button(type='submit' class='btn btn-primary') Registrar Ingreso

      // Agregar botón para volver
      .mt-4
        a.btn.btn-secondary(href='/') Volver atras

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
