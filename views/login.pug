extends layout-login

block content
  .container.d-flex.flex-column.align-items-center.justify-content-center(style="min-height: 100vh;")
    img(src='/images/logo.png', alt='Hospital Logo', width='80', class='mb-3')
    h2.text-center.mb-1.text-dark HOSPITAL
    h6.text-center.mb-4.text-secondary INFORMATION SYSTEM

    .card.shadow-sm.border-0(style="width: 100%; max-width: 380px;")
      .card-body
        h5.mb-4.text-dark.text-start Usuario

        if error
          .alert.alert-danger.text-center #{error}

        form(action='/login', method='POST')
          .mb-3
            .input-group
              span.input-group-text
                i.bi.bi-person
              input.form-control(type='text', name='username', placeholder='Usuario', required)
          .mb-3
            .input-group
              span.input-group-text
                i.bi.bi-lock
              input.form-control(type='password', name='password', placeholder='Contraseña', required)
          button.btn.btn-primary.w-100(type='submit') Iniciar sesión

    p.text-center.mt-4.text-muted.text-sm © 2025 Todos los derechos reservados.
