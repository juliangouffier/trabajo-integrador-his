extends layout

block content
  .container.text-center.mt-5
    img(src='/images/logo.png', alt='Logo', width='80', class='mb-3')
    h2.text-dark HOSPITAL
    h6.text-secondary.mb-5 INFORMATION SYSTEM

    .row.g-4.justify-content-center
      each item in items
        .col-12.col-md-4
          a(href=item.link class='text-decoration-none')
            .card.shadow-sm.border-0.p-4
              .mb-3
                i(class=item.icon style="font-size: 2rem; color: #0d6efd;")
              h5.text-dark.mb-1= item.title
              p.text-muted= item.desc

    .row.mt-4.justify-content-center
      each quick in quickAccess
        .col-3
          a(href=quick.link class='text-decoration-none')
            .text-center
              i(class=quick.icon style="font-size: 1.5rem; color: #0d6efd;")
              p.text-dark.mt-1= quick.title
